<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bank"
    tools:context=".OtherAmount">
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/creepster"
        android:textSize="30sp"
        android:id="@+id/main"
        android:textColor="#29DF14"
        android:text="Konoha Bank"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:id="@+id/enterAmount"
        android:textAlignment="center"
        android:padding="5dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main" />
    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:padding="5dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:inputType="number"
        android:textColorHint="@color/black"
        android:id="@+id/enterDesiredAmount"
        app:layout_constraintTop_toBottomOf="@id/enterAmount"
        android:background="#40ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmInAmt"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@id/enterDesiredAmount"
        app:layout_constraintEnd_toEndOf="parent"/>
    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearInAmt"
        android:layout_marginTop="200dp"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/cherry_cream_soda"
        android:background="@drawable/gradient"
        app:layout_constraintTop_toBottomOf="@id/enterDesiredAmount"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>