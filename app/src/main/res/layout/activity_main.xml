<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/mainText"
        android:text="@string/royal_bank"
        android:layout_margin="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="432dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/linearbg"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="175dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:text="@string/enter_credentials_login"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            style="@style/linearText"/>

        <EditText
            android:id="@+id/etForUserName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/EditTextForUserName"
            android:hint="@string/enter_username"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/etForMPin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/EditTextForPin"
            android:hint="@string/enter_mPin"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="numberPassword"
            android:maxLength="6"/>

        <android.widget.Button
            android:id="@+id/mainPageButton"
            style="@style/mainButton"
            android:text="@string/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/buttonbg"
            android:fontFamily="@font/new_rocker"
            android:inputType="number" />
        <TextView
            android:id="@+id/linkForSignup"
            android:layout_width="match_parent"
            style="@style/newUser"
            android:text="@string/new_user"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>